<?php
/**
 * @var PaymentTokenInterface $paymentToken
 * @var Escaper $escaper
 */

use Magento\Framework\Escaper;
use Magento\Vault\Api\Data\PaymentTokenInterface;

$paymentToken = $block->getPayment() ?: null;
$tokenDetails = json_decode(
    $paymentToken->getTokenDetails(),
    true
);
?>
<?php if ($paymentToken !== null): ?>
    <p>
        <?= $escaper->escapeHtml(__('Card Ending')) ?>:
        <?= $tokenDetails['maskedCC'] ?? $escaper->escapeHtml(__('N/A'))  ?>
    </p>
    <p>
        <?= $escaper->escapeHtml(__('Expiring On')) ?>:
        <?= $tokenDetails['expirationDate'] ?? $escaper->escapeHtml(__('N/A')) ?>
    </p>
<?php endif; ?>
